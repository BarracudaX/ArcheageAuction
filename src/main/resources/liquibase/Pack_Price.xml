<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="barracuda">
        <createTable tableName="pack_prices">
            <column name="pack_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_pack_prices_packs" references="packs(id)" />
            </column>
            <column name="archeage_server_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_pack_prices_archeage_servers" references="archeage_servers(id)" />
            </column>
            <column name="sell_location_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_pack_prices_locations" references="locations(id)" />
            </column>
            <column name="gold" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="silver" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="copper" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="barracuda">
        <dropForeignKeyConstraint baseTableName="pack_prices" constraintName="fk_pack_prices_archeage_servers"/>
        <dropColumn tableName="pack_prices" columnName="archeage_server_id"/>
    </changeSet>

    <changeSet id="2" author="barracuda" context="dev">
        <loadData tableName="pack_prices" file="csv/pack_prices.csv">
            <column name="copper" header="copper" type="NUMERIC" />
            <column name="gold" header="gold" type="NUMERIC" />
            <column name="silver" header="silver" type="NUMERIC" />
            <column name="pack_id" header="pack_id" type="NUMERIC" />
            <column name="sell_location_id" header="sell_location_id" type="NUMERIC" />
        </loadData>
    </changeSet>
    
</databaseChangeLog>